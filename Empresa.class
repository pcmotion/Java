	public void adiciona(Funcionario f){
		this.empregados[funcionariosContratados]=f;
		this.empregados[funcionariosContratados].idFuncionario=idFuncionario+1;
		idFuncionario++;
		funcionariosContratados++;
	}

	public void mostraEmpresa(){
		JOptionPane.showMessageDialog(null, "Nome Empresa - "+nome+"\n"+"CNPJ - "+cnpj);
	}

	public void mostraFuncionario(){
		for(indiceMostra=0;indiceMostra<funcionariosContratados;indiceMostra++){
			JOptionPane.showMessageDialog(null,"ID - "+empregados[indiceMostra].getIdFuncionario()+"\n"+"Nome - "+empregados[indiceMostra].nome+"\n"+"Salario - "+empregados[indiceMostra].salario, "Funcionarios" , 2);//O ultimo parametro significa a mudança no tipo da mensagem e logicamente o tipo de icone exibido na tela.
		}
	}

